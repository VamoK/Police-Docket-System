<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>za.ac.tut.web.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StartSsessionServlet</servlet-name>
        <servlet-class>za.ac.tut.web.StartSsessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddDocketServlet</servlet-name>
        <servlet-class>za.ac.tut.web.AddDocketServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetDocketServlet</servlet-name>
        <servlet-class>za.ac.tut.web.GetDocketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StartSsessionServlet</servlet-name>
        <url-pattern>/StartSsessionServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddDocketServlet</servlet-name>
        <url-pattern>/AddDocketServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetDocketServlet</servlet-name>
        <url-pattern>/GetDocketServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <error-page>
        <exception-type>za.ac.tut.ejb.bl.AdminLoginErrorException</exception-type>
        <location>/error.jsp</location>
    </error-page>
</web-app>
